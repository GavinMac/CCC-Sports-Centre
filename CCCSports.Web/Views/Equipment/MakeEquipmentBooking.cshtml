@model CCCSports.Web.Models.EquipmentBookingInputModel

@{
    ViewBag.Title = "Make Equipment Booking";
}

<h2>Make Equipment Booking</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>EquipmentBookingInputModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{
            List<SelectListItem>
                    listItems = new List<SelectListItem>
                        ();
            listItems.Add(new SelectListItem
            {
                Text = "Male",
                Value = "Male"
            });

        }

        <div class="form-group">
            @Html.LabelFor(model => model.EquipmentName, htmlAttributes: new { @class = "control-label col-md-2" })
