@model CCCSports.Web.Models.CafeItemViewModel


<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="product-box">

        @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
        {
            @Html.ActionLink("Remove Item", "DeleteItem", "Cafe", new { id = Model.ItemId }, null)<br />
            @Html.ActionLink("Edit Item", "EditItem", "Cafe", new { id = Model.ItemId }, null)
        }


        <h3><b>@Model.ItemName</b></h3>
        <div class="product-id">Product ID: #@Model.ItemId</div>
        <br/>
        <div class="product-cost"><b>£@Model.ItemCost</b></div>
        <br />
        <div>
            @if (Model.ItemStock <= 5)
            {
                <p>(@Model.ItemStock left in stock)</p>
                <b style="color:#e88e00">Stock is low</b>
            }
            else if (Model.ItemStock == 0)
            {
                <p>(@Model.ItemStock left in stock)</p>
                <b style="color:#ce0000">Out of Stock</b>
            }
            else
            {
                <p>(@Model.ItemStock left in stock)</p>
                <b style="color:#029f00">In Stock</b>
            }
        </div>
    </div>


</div>

